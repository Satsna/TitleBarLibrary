<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titlebar_height</item>
    </style>

    <style name="style_titlebar_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">10dp</item>

    </style>

    <style name="style_titlebar_left">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="style_titlebar_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="style_titlebar_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--标题字体大小和颜色-->
    <style name="style_titlebar_center_text_white">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/title_bar_text_white</item>
    </style>

    <style name="style_titlebar_right_text_white">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_bar_text_white</item>
    </style>
    <!--标题字体大小和颜色-->
    <style name="style_titlebar_center_text_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/title_bar_text_black</item>
    </style>
    <!--标题字体大小和颜色-->
    <style name="style_titlebar_right_text_black">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title_bar_text_black</item>
    </style>


</resources>
